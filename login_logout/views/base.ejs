<%- include('header') -%>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login System</h2>
      <span>Login for existing users</span>
    </div>

    <% if(locals.logout){ %>
    <div class="alert alert-success text-center"><%= logout %></div>
    <% } %>
    <form action="/route/login" method="POST" class="pt-3">
      <div class="form-group">
        <input
          type="text"
          name="email"
          placeholder="email"
          class="form-control"
        />
        <small class="text-left form-text text-muted"
          >Register email address</small
        >
      </div>
      <div class="form-group">
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="password"
        />
      </div>
      <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    </form>
  </div>
</div>

<%- include('footer') -%>
